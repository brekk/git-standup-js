{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "space": 2,
  "semicolon": false,
  "esnext": true,
  "parser": "babel-eslint",
  "ignores": ["*.js","build/**"],
  "rules": {
    "no-var": 2,
    "eqeqeq": [2, "smart"],
    "babel/arrow-parens": [2, "always"],
    "consistent-this": 0,
    "func-names": [2],
    "generator-star-spacing": [2, "after"],
    "indent": [2, 2],
    "quotes": [2, "backtick"],
    "max-len": [1, 100, 2],
    "new-cap": [2, {"capIsNew": false}],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-unused-vars": [2, {"vars": "all", "varsIgnorePattern": "^__IGNORE" }],
    "object-curly-spacing": 0,
    "one-var": 0,
    "operator-linebreak": [2, "after"],
    "prefer-reflect": 0,
    "space-before-function-paren": [2, "never"],
    "strict": 0
  },
  "extends": ["standard"],
  "plugins": ["babel"]
}
